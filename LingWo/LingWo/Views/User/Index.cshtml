@model IEnumerable<LingWo.Models.ApplicationUser>
@{
    ViewBag.Title = "Օգտատերներ";
}
@if (Model.Count() > 0)
{
    <div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Օգտատերներ</h3>
                <div class="card-tools">
                    <form>
                        <div class="input-group input-group-sm" style="width: 150px;">
                            @* <input id="search-input" type="text" name="table_search" class="form-control float-right"
                                placeholder="Search"> *@
                                @* <select name="filter" id="filter" asp-items="@Model.UserSelectedList" class="form-control float-right">
                                    <option value="Null"> </option>
                                </select> *@
                            @* <div class="input-group-append">
                                <button id="search-btn" type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div> *@
                        </div>
                    </form>
                </div>
            </div>
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">Ստեղծել նոր հաշիվ</a>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Էլ Փոստ</th>
                            <th>Գործողություններ</th>
                        </tr>
                    </thead>
                    <tbody id="users">
                        @foreach (var user in Model)
                            {
                                <tr class="user-item" data-id="@user.Id">
                                    <td>@user.Id</td>
                                    <td>@user.Email</td>
                                    <td>
                                        <a asp-controller="User" asp-action="Edit" asp-route-Id="@user.Id"
                                            class="btn btn-primary">
                                            <i class="fas fa-solid fa-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>

        </div>
    </div>

}
else
{
    <h1>Օգտատերներ չեն գտնվել!</h1>
    <a asp-controller="User" asp-action="Create" class="btn btn-primary">Ստեղծել նոր հաշիվ</a>
}
